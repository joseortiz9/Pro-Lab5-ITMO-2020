<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane fx:id="anchorMapPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Pane fx:id="wrapperMapPane" styleClass="map-wrapper" prefHeight="200.0" prefWidth="500.0">
                    <!--<Canvas fx:id="dragonsMapCanvas" />-->
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Pane>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="700.0">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <children>
                        <VBox prefHeight="200.0" prefWidth="690.0">
                            <children>
                                <Pane fx:id="dragonPicturePane" prefHeight="200.0" prefWidth="300.0">
                                    <!--<Canvas fx:id="dragonsMapCanvas" />-->
                                </Pane>
                                <GridPane fx:id="dragonDetailsGrid" />
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
                                    <children>
                                        <JFXButton fx:id="editDragonButton" onAction="#handleEditDragonButtonAction" text="Edit" textAlignment="CENTER"/>
                                        <JFXButton fx:id="removeDragonButton" onAction="#handleRemoveDragonButtonAction"  text="Remove" textAlignment="CENTER"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
