<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="625.0" prefWidth="1000.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"> <!--fx:controller="ru.students.lab.clientUI.controllers.MainController">-->
    <children>

        <!--Menu items-->
        <fx:include fx:id="mainMenuResource" source="menu/main_menu.fxml"/>

        <AnchorPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="31.0">
            <children>
                <JFXTabPane fx:id="mainTabPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <tabs>

                        <Tab fx:id="mainTab" closable="false" styleClass="tab-main" text="Main">
                            <content>
                                <!--Main content (collection table and command buttons)-->
                                <fx:include fx:id="mainViewResource" source="tabs/main_tab.fxml"/>
                            </content>
                        </Tab>


                        <Tab fx:id="mapTab" closable="false" styleClass="tab-main" text="Map">
                            <content>
                                <!--Map tab content-->
                                <fx:include fx:id="mapTabResource" source="tabs/map_tab.fxml"/>
                            </content>
                        </Tab>


                        <Tab fx:id="helpTab" closable="false" styleClass="tab-main" text="Help">
                            <content>
                                <!--Help tab content-->
                                <fx:include fx:id="helpTabResource" source="tabs/help_tab.fxml"/>
                            </content>
                        </Tab>
                    </tabs>
                </JFXTabPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
