<AnchorPane fx:id="rootAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="625.0" prefWidth="1000.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.students.lab.clientUI.controllers.MainController">
    <children>

        <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu fx:id="menuUser" mnemonicParsing="false" text="User">
                    <items>
                        <MenuItem mnemonicParsing="false" text="CurrentUser"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuLogOut" text="Log out"/>
                    </items>
                </Menu>
                <Menu fx:id="menuAdd" mnemonicParsing="false" text="Add">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuAddDragon" text="Add Dragon"/>
                    </items>
                </Menu>
                <Menu fx:id="menuLanguage" mnemonicParsing="false" text="Language">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguageToEnglish" selected="true"
                                       text="English">
                            <toggleGroup>
                                <ToggleGroup fx:id="languageOptions"/>
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguageToRussian" text="Russian"
                                       toggleGroup="$languageOptions"/>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguageToSerbian" text="Serbian"
                                       toggleGroup="$languageOptions"/>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguageToCroatian" text="Croatian"
                                       toggleGroup="$languageOptions"/>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguageToSpanish" text="Spanish"
                                       toggleGroup="$languageOptions"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAboutMenu" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <AnchorPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="31.0">
            <children>
                <JFXTabPane fx:id="mainTabPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <tabs>

                        <Tab fx:id="mainTab" closable="false" styleClass="tab-main" text="Main">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
                                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                              AnchorPane.topAnchor="0.0">
                                            <children>
                                                <GridPane fx:id="commandsBtnGrid"/>
                                                <TableView fx:id="dragonsTableView">
                                                    <columns>
                                                        <TableColumn fx:id="idCol" maxWidth="2500.0" prefWidth="75.0"
                                                                     text="ID"/>
                                                        <TableColumn fx:id="keyCol" maxWidth="2500.0" prefWidth="75.0"
                                                                     text="key"/>
                                                        <TableColumn fx:id="nameCol" prefWidth="75.0" text="name"/>
                                                        <TableColumn fx:id="coordinatesCol" prefWidth="75.0"
                                                                     text="coordinates"/>
                                                        <TableColumn fx:id="dateCol" prefWidth="75.0"
                                                                     text="date_creation"/>
                                                        <TableColumn fx:id="ageCol" prefWidth="75.0" text="age"/>
                                                        <TableColumn fx:id="colorCol" prefWidth="75.0" text="color"/>
                                                        <TableColumn fx:id="typeCol" prefWidth="75.0" text="type"/>
                                                        <TableColumn fx:id="characterCol" prefWidth="75.0"
                                                                     text="character"/>
                                                        <TableColumn fx:id="headCol" maxWidth="2800.0" prefWidth="75.0"
                                                                     text="head{#eyes}"/>
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                    <contextMenu>
                                                        <ContextMenu>
                                                            <items>
                                                                <MenuItem mnemonicParsing="false"
                                                                          onAction="#handleRefresh" text="Refresh"/>
                                                                <MenuItem mnemonicParsing="false"
                                                                          onAction="#handleDragonEdit" text="Edit"/>
                                                                <MenuItem mnemonicParsing="false"
                                                                          onAction="#handleDragonRemove" text="Delete"/>
                                                            </items>
                                                            <styleClass>
                                                                <String fx:value="table-context"/>
                                                                <String fx:value="colored-context-menu"/>
                                                            </styleClass>
                                                        </ContextMenu>
                                                    </contextMenu>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>


                        <Tab fx:id="mapTab" closable="false" styleClass="tab-main" text="Map">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <Canvas fx:id="dragonsMap" height="548.0" layoutX="58.0" layoutY="51.0"
                                                width="977.0" AnchorPane.bottomAnchor="10.0"
                                                AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                                                AnchorPane.topAnchor="10.0"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>


                        <Tab fx:id="helpTab" closable="false" styleClass="tab-main" text="Help">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <HBox layoutX="104.0" layoutY="87.0" prefHeight="100.0" prefWidth="200.0"
                                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <VBox prefHeight="575.0" prefWidth="499.0">
                                                    <children>
                                                        <JFXTextField fx:id="inputCommandKey" labelFloat="true" promptText="Command Key">
                                                            <padding>
                                                                <Insets left="5.0" top="30.0"/>
                                                            </padding>
                                                        </JFXTextField>
                                                        <JFXListView fx:id="commandKeysListView" prefHeight="497.0" prefWidth="494.0">
                                                            <VBox.margin>
                                                                <Insets left="5.0" top="20.0"/>
                                                            </VBox.margin>
                                                        </JFXListView>
                                                    </children>
                                                </VBox>
                                                <VBox prefHeight="575.0" prefWidth="458.0">
                                                    <children>
                                                        <Label fx:id="detailsTitle" styleClass="main-title"
                                                               text="Command details:">
                                                            <font>
                                                                <Font size="23.0"/>
                                                            </font>
                                                            <padding>
                                                                <Insets left="20.0" top="20.0"/>
                                                            </padding>
                                                        </Label>
                                                        <Label fx:id="detailsText" styleClass="simple-text"
                                                               text="Lorem Ipsum">
                                                            <font>
                                                                <Font size="18.0"/>
                                                            </font>
                                                            <padding>
                                                                <Insets left="20.0" top="20.0"/>
                                                            </padding>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </JFXTabPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
