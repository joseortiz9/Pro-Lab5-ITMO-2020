<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import java.lang.String?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.students.lab.clientUI.controllers.MainTabController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <GridPane fx:id="commandsBtnGrid"/>
                <TableView fx:id="dragonsTableView">
                    <columns>
                        <TableColumn fx:id="idCol" maxWidth="2500.0" prefWidth="75.0"
                                     text="ID"/>
                        <TableColumn fx:id="keyCol" maxWidth="2500.0" prefWidth="75.0"
                                     text="key"/>
                        <TableColumn fx:id="nameCol" prefWidth="75.0" text="name"/>
                        <TableColumn fx:id="coordinatesCol" prefWidth="75.0"
                                     text="coordinates"/>
                        <TableColumn fx:id="dateCol" prefWidth="75.0"
                                     text="date_creation"/>
                        <TableColumn fx:id="ageCol" prefWidth="75.0" text="age"/>
                        <TableColumn fx:id="colorCol" prefWidth="75.0" text="color"/>
                        <TableColumn fx:id="typeCol" prefWidth="75.0" text="type"/>
                        <TableColumn fx:id="characterCol" prefWidth="75.0"
                                     text="character"/>
                        <TableColumn fx:id="headCol" maxWidth="2800.0" prefWidth="75.0"
                                     text="head{#eyes}"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem mnemonicParsing="false"
                                          onAction="#handleRefresh" text="Refresh"/>
                                <MenuItem mnemonicParsing="false"
                                          onAction="#handleDragonEdit" text="Edit"/>
                                <MenuItem mnemonicParsing="false"
                                          onAction="#handleDragonRemove" text="Delete"/>
                            </items>
                            <styleClass>
                                <String fx:value="table-context"/>
                                <String fx:value="colored-context-menu"/>
                            </styleClass>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>


